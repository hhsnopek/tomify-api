{
  "name": "tomify-api",
  "profile": "tomify",
  "regions": ["us-east-1"],
  "hooks": {
    "build": "babel src -d ./ && cp src/tom-wiggle.gif ./",
    "clean": "rm index.js tomify.js tom-wiggle.gif"
  },
  "environment": {
    "AWS_BUCKET": "tomify"
  },
  "lambda": {
    "memory": 512,
    "timeout": 120
  },
  "cors": {
    "enable": true,
    "allowed_methods": ["POST"],
    "allowed_headers": ["*"]
  }
}
